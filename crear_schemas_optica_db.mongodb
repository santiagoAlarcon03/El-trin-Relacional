            },
            numero: {
              bsonType: "string",
              description: "N√∫mero de documento √∫nico"
            }
          }
        },
        direcciones: {
          bsonType: "array",
          items: {
            bsonType: "object",
            required: ["calle", "ciudad", "pais"],
            properties: {
              tipo: {
                enum: ["Principal", "Trabajo", "Env√≠o"],
